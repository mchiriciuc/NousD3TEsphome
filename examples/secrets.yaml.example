# Example secrets.yaml file
# Copy this to your ESPHome config directory and fill in your values
# Location: /config/esphome/secrets.yaml (Home Assistant)
#       or: ~/.esphome/secrets.yaml (standalone ESPHome)

# WiFi Configuration
wifi_ssid: "YourWiFiNetworkName"
wifi_password: "YourWiFiPassword"

# Optional: Backup WiFi
# wifi_ssid_backup: "YourBackupWiFi"
# wifi_password_backup: "BackupPassword"

# Optional: Home Assistant API encryption key
# api_encryption_key: "your-32-character-encryption-key-here"

# Optional: OTA password for firmware updates
# ota_password: "your-ota-password"
